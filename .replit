run = "npm run dev"
entrypoint = "src/server.ts"
modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["npx", "tsx", "src/server.ts"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx watch src/server.ts"
waitForPort = 5000

[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:2.0.0"]
